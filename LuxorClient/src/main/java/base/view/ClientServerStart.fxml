<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="base.view.ClientServerStartController">
   <center>
      <Pane prefHeight="316.0" prefWidth="390.0" BorderPane.alignment="CENTER">
         <children>
            <RadioButton id="rbtnServer" layoutX="38.0" layoutY="44.0" mnemonicParsing="false" onAction="#optServerClientSelected" selected="true" text="Start A New Game">
               <toggleGroup>
                  <ToggleGroup fx:id="tglGameButton" />
               </toggleGroup>
            </RadioButton>
            <RadioButton id="rbtnClient" layoutX="38.0" layoutY="110.0" mnemonicParsing="false" onAction="#optServerClientSelected" text="Connect to existing game" toggleGroup="$tglGameButton" />
            <TextField id="txtServerPort" fx:id="txtServerPort" layoutX="116.0" layoutY="72.0" prefHeight="25.0" prefWidth="95.0" />
            <Label layoutX="38.0" layoutY="76.0" text="Listen on port:" />
            <Label layoutX="38.0" layoutY="138.0" text="Computer: " />
            <TextField id="txtComputerName" fx:id="txtComputerName" disable="true" layoutX="116.0" layoutY="134.0" prefHeight="25.0" prefWidth="243.0" text="localhost" />
            <Label layoutX="38.0" layoutY="167.0" text="Port Number:" />
            <TextField id="txtClientPort" fx:id="txtClientPort" disable="true" layoutX="116.0" layoutY="163.0" prefHeight="25.0" prefWidth="95.0" />
            <Button id="btnOK" layoutX="42.0" layoutY="223.0" mnemonicParsing="false" prefWidth="100.0" text="OK" />
            <Button id="btnCancel" layoutX="156.0" layoutY="223.0" mnemonicParsing="false" prefWidth="100.0" text="Cancel" />
         </children>
      </Pane>
   </center>
</BorderPane>
